# Zettelwirtschaft - Konfiguration
# Kopiere diese Datei nach .env und passe die Werte an.

# Frontend-Port (Default: 8080)
FRONTEND_PORT=8080

# Datenbank
# DATABASE_URL=sqlite+aiosqlite:///./data/zettelwirtschaft.db

# Verzeichnisse
# UPLOAD_DIR=./data/uploads
# WATCH_DIR=./data/watch
# ARCHIVE_DIR=./data/archive

# Ollama (lokales LLM)
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llama3.2

# Upload-Limits
# MAX_UPLOAD_SIZE_MB=50
# ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,tiff,bmp

# OCR
# OCR_LANGUAGES=deu+eng
# MAX_OCR_PAGES=10

# KI-Analyse
# OLLAMA_TIMEOUT=120
# OLLAMA_MAX_RETRIES=2
# CONFIDENCE_THRESHOLD=0.7

# Logging
# LOG_LEVEL=INFO

# Backup
# BACKUP_KEEP_DAILY=7
# BACKUP_KEEP_WEEKLY=4

# PIN-Schutz (optional)
PIN_ENABLED=false
PIN_CODE=
